<!DOCTYPE html>
<html lang="en">

<%- include ("./partials/head.ejs") %>
<script>require('/index.js')</script>

<body>
    <main>
        <h2>Main Quiz</h2>
        <%- include ("./partials/nav.ejs") %>
        <div>
            <h3>The question is here</h3>
            <form>
                <input type="radio" id="option1" name="option" value="option1">
                <label for="option1">Option1</label><br>
                <input type="radio" id="option2" name="option" value="option2">
                <label for="option2">Option2</label><br>
                <input type="radio" id="option3" name="option" value="option3">
                <label for="option3">Option3</label><br>
                <input type="radio" id="option4" name="option" value="option4">
                <label for="option4">Option4</label>
            </form>
        </div>
    </main>
    <div>
        <% if (tests.length > 0) { %>
        <% tests.forEach(test => { %>
        <b><%= test.questions %></b>
        <ol>
            <li><i><%= test.answer1 %></i></li>
            <li><i><%= test.answer2 %></i></li>
            <li><i><%= test.answer3 %></i></li>
            <li><i><%= test.answer4 %></i></li>
        </ol>
        <% }) %>
        <% } else { %>
        <p>No se han encontrado preguntas</p>
        <% } %>
    </div>
</body>

</html>